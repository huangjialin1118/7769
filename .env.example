# 室友记账系统环境配置模板
# 复制此文件为 .env 并根据需要修改配置

# =================================
# 运行环境配置
# =================================

# 运行模式 (development|production|testing)
FLASK_ENV=production

# 服务器配置
HOST=0.0.0.0
PORT=7769

# =================================
# 安全配置
# =================================

# 应用密钥 - 生产环境必须修改！
# 生成新密钥: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# HTTPS配置 (在反向代理或SSL终端后设置为true)
HTTPS=false

# =================================
# 文件上传配置
# =================================

# 最大上传文件大小 (字节)
MAX_UPLOAD_SIZE=10485760

# 磁盘空间警告阈值 (MB)
MIN_DISK_SPACE_MB=100

# =================================
# 数据库配置 (通常不需要修改)
# =================================

# 数据库文件路径 (相对于项目根目录)
# DATABASE_PATH=instance/database.db

# =================================
# 日志配置
# =================================

# 日志级别 (DEBUG|INFO|WARNING|ERROR)
LOG_LEVEL=INFO

# =================================
# 网络配置
# =================================

# 允许的主机名 (用逗号分隔，* 表示允许所有)
# ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.*

# =================================
# 高级配置 (一般不需要修改)
# =================================

# 会话超时时间 (天)
SESSION_LIFETIME_DAYS=7

# 记住我功能超时时间 (天)
REMEMBER_ME_DAYS=30

# 最大登录失败次数
MAX_LOGIN_ATTEMPTS=5

# =================================
# 树莓派特定配置
# =================================

# SD卡保护模式 (减少写入频率)
SD_CARD_PROTECTION=false

# 温度监控阈值 (摄氏度，树莓派专用)
CPU_TEMP_WARNING=70
CPU_TEMP_CRITICAL=80

# =================================
# 备份配置
# =================================

# 自动备份间隔 (小时，0表示禁用)
AUTO_BACKUP_HOURS=24

# 备份保留数量
BACKUP_RETENTION_COUNT=7

# 备份存储路径
BACKUP_PATH=backups/

# =================================
# 监控配置
# =================================

# 启用性能监控
ENABLE_METRICS=true

# 监控数据保留时间 (天)
METRICS_RETENTION_DAYS=30